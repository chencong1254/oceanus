<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="600px"
              android:layout_height="100px"
              android:orientation="vertical"
>
    <FrameLayout android:layout_width="600px"
                 android:layout_height="100px">

        <View
            android:visibility="invisible"
            android:id="@+id/chlist_ch_bg_right"
            android:layout_width="600px"
            android:layout_height="100px"
            android:background="@color/chlist_ch_item_right"
        />

        <LinearLayout
            android:id="@+id/ll_channel_item"
            android:layout_width="600px"
            android:layout_height="100px"
            android:background="@drawable/chlist_channel_item_selector"
            android:focusable="true"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ch_item_atv"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:background="@drawable/chlist_icon_atv_select"
            />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_ch_item_radio"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:background="@drawable/chlist_icon_radio_select"
            />
            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_ch_item_dtv"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="40px"
                android:layout_marginRight="30px"
                android:background="@drawable/chlist_icon_dtv_select"
            />
            <skyworth.skyworthlivetv.osd.ui.channellist.view.CustomEditText
                android:id="@+id/tv_channel_name"
                android:layout_width="0px"
                android:layout_height="100px"
                android:layout_weight="1"
                android:background="@color/transparent_full"
                android:focusable="false"
                android:gravity="left|center_vertical"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:text="33333"
                android:textColor="@color/chlist_ch_text_default"
                android:textSize="36px"
            />
            <ImageView
                android:id="@+id/iv_ch_item_fav"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                android:background="@drawable/chlist_icon_fav_select"
            />
            <ImageView
                android:id="@+id/iv_ch_item_lock"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:background="@drawable/chlist_icon_lock_select"
            />
            <ImageView
                android:id="@+id/iv_ch_item_skip"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20px"
                android:background="@drawable/chlist_icon_skip_select"
            />
            <ImageView
                android:id="@+id/iv_ch_item_key"
                android:layout_width="30px"
                android:layout_height="30px"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="33px"
                android:background="@drawable/chlist_icon_key_select"
            />
        </LinearLayout>

    </FrameLayout>
</LinearLayout>